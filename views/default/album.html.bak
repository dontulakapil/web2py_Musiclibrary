{{extend 'layout.html'}}
{{for f in [form,form1,form2]:}}
{{k=len(f)}}
{{if k!=0:}}
    {{if f[0].language==1:}}
        <h1>TELUGU</h1>
    {{pass}}
    {{if f[0].language==2:}}
        <h1>HINDI</h1>
    {{pass}}
    {{if f[0].language==3:}}
        <h1>ENGLISH</h1>
    {{pass}}    
{{if k<=4:}}
    {{for i in f:}}
     
        {{if i.image!=None:}}

          <a href={{=URL(r=request,f="albums",args=[i.id])}}>
                    <img src={{=URL(r=request, c='default', f='download', args=[i.image])}}  height="100" width="100"/></a>
          {{pass}}
     {{pass}}
{{else:}}
         {{for i in [f[-1],f[-2],f[-3],f[-4]]:}}
     
        {{if i.image!=None:}}

          <a href={{=URL(r=request,f="albums",args=[i.id])}}>
                    <img src={{=URL(r=request, c='default', f='download', args=[i.image])}}  height="100" width="100"/></a>
          {{pass}}
     {{pass}}      
    {{pass}}
{{pass}}
{{pass}}
